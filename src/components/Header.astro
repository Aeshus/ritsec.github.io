<style>
header {
    position: sticky;
    top: 0;

    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;

    padding: 0.25rem var(--padding);
    border-bottom: 1px solid var(--border);
    background-color: var(--bg);
}

.logo img {
    height: 3.25rem;
    width: auto;
}

.logo {
    display: inline-block;
}

header nav {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
    align-items: center;
}

input {
    display: none;
}

label {
    display: none;
    cursor: pointer;
    user-select: none;
    padding: 0.5rem;
}

@media (max-width: 1000px) {
    label {
        display: block;
    }

    header nav {
        display: none;
        width: 100%;
        flex-direction: column;
        padding-top: 1rem;
        margin-top: 0.5rem;
        border-top: 1px solid var(--border);
    }

    input:checked ~ nav {
        display: flex;
    }

    header nav a {
        width: 100%;
        text-align: center;
        padding: 0.75rem 0;
    }
}
</style>
