---
import { Picture } from "astro:assets";

interface Props {
    badge?: string;
    reverse?: boolean;
}

const { badge, reverse = false } = Astro.props;
const i = !Astro.slots.has("image");
---

<section class:list={[{ reverse, i }]}>
    <div>
        {badge && <p class="chip">{badge}</p>}

        <h1><slot name="title" /></h1>

        <div class="text">
            <slot />
        </div>

        {
            Astro.slots.has("bottom") && (
                <div class="list">
                    <slot name="bottom" />
                </div>
            )
        }
    </div>

    {
        Astro.slots.has("image") && (
            <div class="image card card-img img-card">
                <slot name="image" />
            </div>
        )
    }
</section>

<style>
    section.i {
        grid-template-columns: none;
        --page-width: 90ch;
        --page-padding: max(1rem, (100% - var(--page-width)) / 2);
    }

    section {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        align-items: center;
        gap: var(--padding-lg);
    }

    .image {
        max-height: 400px;
    }

    .text {
        font-size: var(--md);
        max-width: var(--text-width);
        min-width: 100%;
        margin-bottom: var(--padding-lg);
    }

    .reverse {
        grid-template-columns: 1fr 1.2fr;
    }

    .reverse .img-card {
        order: -1;
    }

    @media (max-width: 1000px) {
        section {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .reverse {
            grid-template-columns: 1fr;
        }
        .reverse .image {
            order: 999;
        }
    }
</style>
