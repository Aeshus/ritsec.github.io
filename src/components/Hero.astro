---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    badge?: string;
    image?: ImageMetadata;
    imageAlt?: string;
    reverse?: boolean;
}

const { badge, image, imageAlt, reverse = false } = Astro.props;
---

<section class:list={[{ reverse }]}>
    <div>
        {badge && <p class="message">{badge}</p>}

        <h1><slot name="title" /></h1>

        <div class="copy">
            <slot />
        </div>

        {
            Astro.slots.has("bottom") && (
                <div class="bottom">
                    <slot name="bottom" />
                </div>
            )
        }
    </div>

    {
        image && (
            <div class="image">
                <Image src={image} alt={imageAlt} width={800} loading="eager" />
            </div>
        )
    }
</section>

<style>
    section {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        align-items: center;
        gap: 2rem;
    }

    .reverse {
        grid-template-columns: 1fr 1.2fr;
    }
    .reverse .image {
        order: -1;
    }

    .message {
        background-color: var(--bg-panel);
        display: inline-block;
        color: var(--fg);
        padding: 0.25rem 0.5rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    h1 {
        font-size: 4rem;
        line-height: 1.1;
        margin-bottom: 1rem;
    }

    h1 strong {
        color: var(--accent);
    }

    .copy {
        font-size: 1.125rem;
        max-width: var(--text-width);
        margin-bottom: 2rem;
    }

    .image {
        padding: 0.5rem;
        outline: 2px solid var(--border);
        outline-offset: -1px;
        background-color: var(--bg-panel);
    }

    img {
        display: block;
        height: 290px;
        object-fit: cover;
        object-position: center;
    }

    .bottom {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    @media (max-width: 1000px) {
        section {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .reverse {
            grid-template-columns: 1fr;
        }
        .reverse .image {
            order: 999;
        }

        .copy {
            margin: auto;
            margin-bottom: 2rem;
        }

        .bottom {
            justify-content: center;
        }

        h1 {
            font-size: 2.5rem;
        }

        .image {
            margin-inline: auto;
        }
    }
</style>
