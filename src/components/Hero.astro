---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    badge?: string;
    image?: ImageMetadata;
    imageAlt?: string;
    reverse?: boolean;
}

const { badge, image, imageAlt, reverse = false } = Astro.props;
---

<section class:list={[{ reverse }]}>
    <div>
        {badge && <p class="chip">{badge}</p>}

        <h1><slot name="title" /></h1>

        <div class="text">
            <slot />
        </div>

        {
            Astro.slots.has("bottom") && (
                <div class="list">
                    <slot name="bottom" />
                </div>
            )
        }
    </div>

    {
        image && (
            <div class="card card-img img-card">
                {/* The image is w=1000 so that it can be full-width when max-width 1000px */}
                <Image src={image} alt={imageAlt} width={1000} loading="eager" />
            </div>
        )
    }
</section>

<style>
    section {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        align-items: center;
        gap: var(--padding-lg);
    }

    .text {
        font-size: var(--md);
        max-width: var(--text-width);
        margin-bottom: var(--padding-lg);
    }

    .reverse {
        grid-template-columns: 1fr 1.2fr;
    }

    .reverse.image {
        order: -1;
    }

    img {
        height: 300px;
    }

    @media (max-width: 1000px) {
        section {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .reverse {
            grid-template-columns: 1fr;
        }
        .reverse .image {
            order: 999;
        }
    }
</style>
