<style>
  footer {
    max-width: var(--w-lg);
    width: 100%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 2rem;
    margin-top: 6rem;
  }

  aside {
    display: flex;
    gap: 1rem;
  }

  a {
    color: inherit;
  }

  nav a {
    text-decoration: none;
  }

  a:hover,
  a:active,
  a:focus {
    color: var(--fg-primary);
  }
</style>
