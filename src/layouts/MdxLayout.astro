---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  subtitle?: string;
  description?: string;
}>;

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} subtitle={frontmatter.subtitle} description={frontmatter.description}>
  <slot />
</BaseLayout>
