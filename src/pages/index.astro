  --orange-10: #da8622;
  --orange-11: #f3ac67;
  --orange-12: #fbe0c8;

  --orange-a1: #d0000004;
  --orange-a2: #fd90350e;
  --orange-a3: #ff94291f;
  --orange-a4: #fb7c0032;
  --orange-a5: #ff8a0c3f;
  --orange-a6: #ff98314f;
  --orange-a7: #fda14766;
  --orange-a8: #ffa54c88;
  --orange-a9: #fe9f36e5;
  --orange-a10: #ff9c26d8;
  --orange-a11: #feb36bf3;
  --orange-a12: #ffe4cbfb;

  --orange-contrast: #fff;
  --orange-surface: #2a1e1480;
  --orange-indicator: #e69132;
  --orange-track: #e69132;
  --orange-background: var(--orange-3);

  --color-background: #101010;

  --gray-1: #101010;
  --gray-2: #191919;
  --gray-3: #232323;
  --gray-4: #2a2a2a;
  --gray-5: #313131;
  --gray-6: #3a3a3a;
  --gray-7: #484848;
  --gray-8: #616161;
  --gray-9: #6f6f6f;
  --gray-10: #7c7c7c;
