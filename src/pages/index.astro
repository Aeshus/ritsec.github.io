  background-color: var(--orange-3);
  border: 1px solid var(--orange-4);
}

header nav a[aria-current="page"]:hover,
header nav a[aria-current="page"]:focus,
header nav a[aria-current="page"]:active{
  background-color: var(--orange-4);
  border: 1px solid var(--orange-5);
}


.hero-images {
    position: absolute;
    left: 28rem;
    top: 10rem;
    width: 0;
    height: 0; /* It is a 0x0 center point */
    z-index: -1; /* Behind the text */
    pointer-events: none; /* So you can click links through the images */
  }
.inner::before,
  .outer::before {
    content: ""; /* Necessary for pseudo-elements to render */
    position: absolute;
    
    /* Center the ring on the 0x0 parent container */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    
    /* Calculate diameter: Width/Height = Radius * 2 */
    width: calc(var(--radius) * 2);
    height: calc(var(--radius) * 2);
    
    /* Styling the ring */
    border-radius: 50%; /* Makes it a circle */
    /* Use a dashed border and one of your theme's semi-transparent colors */
    border: 2px dashed var(--orange-a6); 
    
    /* Ensure it doesn't interfere with clicks */
    pointer-events: none;
    
    /* Optional: Push it slightly further back so images definitely float above it */
    z-index: -1;
  }

  /* 2. Define the Rings */
  .inner, .outer {
    position: absolute;
    top: 0;
    left: 0;
  }

  /* 3. Animation Variables */
  .inner {
    --radius: 400px; /* Distance from center */
    --speed: 90s;
    --direction: 1; /* Clockwise */
  }

  .outer {
    --radius: 750px; /* Further out */
    --speed: 160s;
    --direction: -1; /* Counter-Clockwise */
  }

  /* 4. Target the Images generated by Astro */
  .hero-images img {
    position: absolute;
    /* Center the image on its pivot point */
    top: -75px; 
    left: -75px;
    width: 225px;
    height: 150px;
    max-width: none; /* <--- CRITICAL: prevents it from shrinking to 0 */
    object-fit: cover;
    border-radius: 12px; /* Optional: looks nice */
    
    /* The Ferris Wheel Logic */
    animation: orbit var(--speed) linear infinite;
  }

  /* 5. Distribute Inner Ring (6 images) */
  .inner img:nth-of-type(1) { --angle: 0deg; }
  .inner img:nth-of-type(2) { --angle: 60deg; }
  .inner img:nth-of-type(3) { --angle: 120deg; }
  .inner img:nth-of-type(4) { --angle: 180deg; }
  .inner img:nth-of-type(5) { --angle: 240deg; }
  .inner img:nth-of-type(6) { --angle: 300deg; }

  /* 6. Distribute Outer Ring (6 images, offset by 30deg) */
  .outer img:nth-of-type(1) { --angle: 30deg; }
  .outer img:nth-of-type(2) { --angle: 90deg; }
  .outer img:nth-of-type(3) { --angle: 150deg; }
  .outer img:nth-of-type(4) { --angle: 210deg; }
  .outer img:nth-of-type(5) { --angle: 270deg; }
  .outer img:nth-of-type(6) { --angle: 330deg; }

  /* 7. The Animation Keyframes */
  @keyframes orbit {
    from {
      transform: 
        rotate(var(--angle)) 
        translateX(var(--radius)) 
        rotate(calc(-1 * var(--angle))); 
    }
    to {
      transform: 
        rotate(calc(var(--angle) + 360deg * var(--direction))) 
        translateX(var(--radius)) 
        rotate(calc(-1 * (var(--angle) + 360deg * var(--direction))));
    }
  }
  
  /* Mobile responsiveness: Hide orbit on small screens if it gets too messy */
  @media (max-width: 768px) {
    .hero-images { display: none; }
  }
