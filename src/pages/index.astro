  --gray-12: #eee;

  --gray-contrast: #FFFFFF;
  --gray-surface: rgba(0, 0, 0, 0.05);
  --gray-indicator: #6f6f6f;
  --gray-track: #6f6f6f;
  }
}

*, *::before, *::after {
  box-sizing: border-box;
}

* {
  margin: 0;
}

body {
  background-color: var(--color-background);
  color: var(--gray-12);
  font-family: "Roboto Mono", monospace;
  font-size: 112.5%;
  line-height: 1.2;
}

  h1 {
    font-size: 6rem;
    font-weight: 900;
    text-align: center;
    line-height: 1;
    color: var(--orange-9);
  }

  .info,.links{
    text-align: center;
  }

  .info p {
    font-size: 2rem;
  }

  .info a,
  .links a,
  .link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    line-height: 1;
    margin-top: 1rem;
    color: inherit;
    text-decoration: none;
    padding: 0.35rem 0.5rem 0.25rem 0.5rem;
    border: 4px solid var(--orange-9);
    background-color: var(--orange-1);
  }

  main > * {
    max-width: var(--w-md);
    width: 100%;
    margin: auto;
  }

  header {
    margin-top: 1rem;
  }

  .center > * {
    image-rendering: pixelated;
  }

  .center {
    text-align: center;
    font-weight: 300;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 7rem;
    color: var(--gray-9);
  }

  header div {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    max-width: var(--w-lg);
    width: 100%;
    margin: auto;
  }

  .top-images, .bottom-images {
    display: flex;
    flex-direction: row;
    gap: 2rem;
    justify-content: center;
  }

  .top-images {
    align-items: flex-end;
  }

  .bottom-images {
    align-items: flex-start;
  }

  .top-images > *, .bottom-images > * {
    clip-path: var(--path-lg);
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  @media (max-width: 600px) {
    .center {
      display: none;
    }

    .intro {
      margin-top: 2rem !important;
    }

    .top-images > *:nth-child(1){
      display: none;
    }

    .top-images > *:nth-child(2){
      display: none;
    }
    .top-images > *:nth-child(3){
      margin-bottom: 1.5rem;
      display: none;
    }

    .bottom-images > *:nth-child(1){
      margin-top: 1.5rem;
      display: none;
    }

    .bottom-images > *:nth-child(2){
      margin-top: 2.5rem;
    }
    .bottom-images > *:nth-child(3){
      margin-top: 1rem;
      display: none;
    }
  }

  .top-images > *:nth-child(1){
    margin-bottom: 1rem;
  }

  .top-images > *:nth-child(2){
    margin-bottom: 2.5rem;
  }
  .top-images > *:nth-child(3){
    margin-bottom: 1rem;
  }

  .bottom-images > *:nth-child(1){
    margin-top: 1rem;
  }

  .bottom-images > *:nth-child(2){
    margin-top: 2.5rem;
  }
  .bottom-images > *:nth-child(3){
    margin-top: 1rem;
  }

  .intro {
    margin-top: 8rem;
    max-width: var(--w-lg);
  }

  header div a {
    color: inherit;
    display: inline-block;
    line-height: 1;
    text-decoration: none;
    padding: 0.35rem 0.5rem 0.25rem 0.5rem;
    border: 4px solid var(--orange-9);
    background-color: var(--orange-1);
  }

  header div a[aria-current="page"] {
    background-color: var(--orange-9);
    color: var(--orange-1);
  }

  a:hover,
  a:active,
  a:focus {
    border-color: var(--orange-10);
    background-color: var(--orange-10);
    color: var(--gray-1);
  }

  html,body {
    min-height: 100vh;
    min-height: 100dvh;
    position: relative;
  }

  h2 {
    font-weight: 700;
    font-size: 2.5rem;
    margin-top: 6rem;
    text-align: center;
    color: var(--orange-9);
  }

  .link[href^="#"] img {
    transform: rotate(90deg);
    margin-bottom: 4px;
  }
</style>
