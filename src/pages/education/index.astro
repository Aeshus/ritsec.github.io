---
import { Picture } from "astro:assets";

import Hero from "@/components/Hero.astro";
import Calendar from "@/components/Calendar.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Schedule from "@/components/Schedule.astro";

import heroImg from "@/assets/image6.jpg";
---

<BaseLayout title="Schedule">
    <Hero reverse={true}>
        <Fragment slot="title">
            The Packed <strong>Schedule</strong>
        </Fragment>

        Weekly meetings. Expert demos. Guest speakers from across the industry.
        Your roadmap to everything happening this semester.

        <Fragment slot="image">
            <Picture
                src={heroImg}
                width={1000}
                formats={["avif", "webp"]}
                alt="RITSEC club room."
            />
        </Fragment>
    </Hero>

    <section>
        <h2>Weekly Overview</h2>

        <p>These are the events that generally occur each week</p>

        <Calendar />
    </section>

    <section>
        <h2>Schedule</h2>

        <Schedule ascending={false} showOld={true} />
    </section>
</BaseLayout>
